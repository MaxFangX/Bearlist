    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/catalogemail"
        android:layout_below="@+id/postbutton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:id="@+id/catalogpassword"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/catalogemail"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Post"
        android:id="@+id/postbutton"
        android:layout_toEndOf="@+id/catalogpassword"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/postlist"
        android:layout_below="@+id/catalogpassword"
        android:layout_alignRight="@+id/postbutton"
        android:layout_alignEnd="@+id/postbutton"/>
